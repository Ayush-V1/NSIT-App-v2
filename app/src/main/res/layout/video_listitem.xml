<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="50dp"
    android:background="@drawable/shadow_1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal">
    <LinearLayout
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffffff">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ProgressBar android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:id="@+id/VideoThumbnail"
            android:background="#000000" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_1"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal">
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#ff2ed2b1"
        android:clickable="true"
    android:id="@+id/PlayContainer"
        android:layout_gravity="top"
        android:gravity="right">

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/PlayButton"
            android:background="@drawable/ic_play_arrow_white_24dp"
            android:backgroundTint="#ffffffff"
            android:adjustViewBounds="false"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="PLAY VIDEO"
            android:id="@+id/textView"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            android:layout_marginRight="30dp" />

    </LinearLayout>
    </LinearLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextContentGrid"
        android:layout_margin="10dp">

        <TextView android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:text="Title of video"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:textColor="#ffa4a4a4"
            android:id="@+id/VideoTitle"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="0dp"
            android:layout_gravity="top"
            android:gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DateStamp"
            android:text="14-5-2015"
            android:textAlignment="gravity" />



        <TextView
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Some description text associated with the youtube video.sdfisdlfjlsdf"
            android:id="@+id/VideoDescription"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnSpan="2"
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp" />

    </GridLayout>

</LinearLayout>
</LinearLayout>